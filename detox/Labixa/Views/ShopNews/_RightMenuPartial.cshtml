
@using Outsourcing.Data.Models
@using Labixa.ViewModels
@model ShopFormModel
<div class="col-lg-4 col-12">
    <div class="main-sidebar">
        <!-- Single Widget -->
        <div class="single-widget search">
            <form class="form" method="get" action="@Url.RouteUrl("TimKiemBaiViet")">
                <input type="text" placeholder="Tìm kiếm..." name="keySearchBlog" value="@Model.keySearchBlog">
                <button class="button" type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
        <div class="single-widget recent-post">
            <h3 class="title">Bài viết gần đây</h3>
            <!-- Single Post -->
            @if (Model.blogsRelated.Any() && Model.blogsRelated != null)
            {
                foreach (var item in Model.blogsRelated)
                {
                    <div class="single-post">
                        <div class="image">
                            <img src="@item.BlogImage" alt="@item.Title">
                        </div>
                        <div class="content">
                            <h5><a href="@Url.RouteUrl("ChiTietTinTuc", new { slug = item.Slug})">@item.Title</a></h5>
                            <ul class="comment">
                                <li><i class="fa fa-calendar" aria-hidden="true"></i>Jan 11, 2020</li>
                                <li><i class="fa fa-commenting-o" aria-hidden="true"></i>35</li>
                            </ul>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Không có dữ liêu</p>
            }
        </div>

    </div>
</div>
